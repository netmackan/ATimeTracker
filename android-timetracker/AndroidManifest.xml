<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.markuspage.android.atimetracker" android:sharedUserId="com.markuspage.android.atimetracker" 
    android:installLocation="preferExternal"
    android:versionName="0.21" android:versionCode="21">
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
 <application android:icon="@drawable/icon" android:label="@string/app_name">

  <activity android:name=".Tasks" android:label="A Time Tracker">
   <intent-filter>
    <action android:name="android.intent.action.MAIN" />
    <category android:name="android.intent.category.LAUNCHER" />
   </intent-filter>
  </activity>
    
  <activity android:name=".TaskTimes" android:label="Task Times">
   <intent-filter>
    <action android:name="android.intent.action.VIEW" />
    <category android:name="android.intent.category.DEFAULT" />
   </intent-filter>
  </activity>
    
  <activity android:name=".EditTime" android:label="Edit Time">
   <intent-filter>
    <action android:name="android.intent.action.VIEW" />
    <category android:name="android.intent.category.DEFAULT" />
   </intent-filter>
  </activity>
    
  <activity android:name=".Report" android:label="Report">
   <intent-filter>
    <action android:name="android.intent.action.VIEW" />
    <category android:name="android.intent.category.DEFAULT" />
   </intent-filter>
  </activity>
    
  <activity android:name=".Settings" android:label="Settings">
      <intent-filter>
          <action android:name="android.intent.action.VIEW"/>
          <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
  </activity>
  
  </application>
  <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="14" />
</manifest>
